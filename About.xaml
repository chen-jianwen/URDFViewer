<Window x:Class="URDFImporter.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:URDFImporter"
        mc:Ignorable="d"
        Title="关于" Height="800" Width="600">
    <Grid Background="#F7F7F7">
        <Border CornerRadius="16" Background="White" Padding="40" Margin="60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Logo区 可替换为实际图片 -->
                <!--<Image Source="Assets/logo.png" Width="80" Height="80" Margin="0,0,0,12" Stretch="Uniform" Grid.Row="0" HorizontalAlignment="Center"/>-->
                <TextBlock Text="URDF Importer" FontSize="36" FontWeight="Bold" Foreground="#2D5A9B" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,10" />
                <TextBlock Text="版本 1.0" FontSize="17" Foreground="#666" HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,4" />
                <TextBlock Text="作者：JavenChan" FontSize="17" Foreground="#666" HorizontalAlignment="Center" Grid.Row="2" Margin="0,0,0,10" />
                <Separator Grid.Row="3" Margin="0,8,0,8" />
                <TextBlock Text="这是一个用于加载和显示URDF文件的工具。" FontSize="16" Foreground="#444" TextAlignment="Center" TextWrapping="Wrap" Grid.Row="4" Margin="0,0,0,8" />
                <Border Grid.Row="5" Background="#F7F7F7" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="功能特性" FontSize="16" FontWeight="SemiBold" Foreground="#2D5A9B" Margin="0,0,0,8" />
                        <TextBlock FontSize="15" Foreground="#444" TextAlignment="Left">
                            <Run Text="• 加载URDF文件"/>
                            <LineBreak/>
                            <Run Text="• 3D可视化机器人模型"/>
                            <LineBreak/>
                            <Run Text="• 交互式3D视图操作"/>
                            <LineBreak/>
                            <Run Text="• 坐标系显示"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <StackPanel Grid.Row="6" HorizontalAlignment="Center">
                    <TextBlock Text="开发环境：.NET 8.0 / WPF / HelixToolkit" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,2" />
                    <TextBlock Text="版权所有 © JavenChan 2025" FontSize="13" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,2,0,0" />
                    <TextBlock FontSize="14" Foreground="#888" Margin="0,10,0,0" TextWrapping="Wrap">
                        <Run Text="联系邮箱："/>
                        <Hyperlink NavigateUri="mailto:javenchan1994@foxmail.com" Foreground="#2D5A9B" RequestNavigate="Hyperlink_RequestNavigate">
                            javenchan1994@foxmail.com
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
